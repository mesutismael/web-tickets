<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/general_primary</item>
        <item name="colorPrimaryDark">@color/general_primary_dark</item>
        <item name="colorAccent">@color/general_accent</item>
        <item name="android:textViewStyle">@style/Webtickets.TextView</item>
        <item name="buttonStyle">@style/Webtickets.Button</item>
    </style>

    <style name="Webtickets"/>

    <style name="Webtickets.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/general_text</item>
        <item name="android:textSize">@dimen/general_text</item>
    </style>

    <style name="Webtickets.TextView.Title">
        <item name="android:textSize">@dimen/general_text_title</item>
    </style>

    <style name="Webtickets.TextView.Light">
        <item name="android:textColor">@color/general_text_light</item>
    </style>

    <style name="Webtickets.Button" parent="android:Widget.Button">
        <item name="android:textColor">@color/general_text_white</item>
        <item name="android:textSize">@dimen/general_text_button</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:minWidth">@dimen/general_button_min_width</item>
        <item name="android:minHeight">@dimen/general_button_min_height</item>
        <item name="android:paddingLeft">@dimen/general_button_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/general_button_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/general_button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/general_button_padding_vertical</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Webtickets.Button.Inline">
        <item name="android:textColor">@color/general_button_inline_text</item>
        <item name="android:background">@drawable/selector_button_inline</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
